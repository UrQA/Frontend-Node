<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <base href="/<%= apikey %>">
    <% include ../header %>

</head>

<body>

<section id="container" ng-controller="DashBoardController">
    <% include ../navibar %>

<!--sidebar start-->
<aside>
    <div id="sidebar" class="nav-collapse" ng-controller="DetailNavSideCtrl">
        <!-- sidebar menu start-->name
        <div class="leftside-navigation">
            <ul class="sidebar-menu" id="nav-accordion" >
                <li ng-repeat="link in menu" ng-class="link.menu !== undefined ? 'sub-menu': ''">
                    <a ng-class="{'active':link.name === activeMenu}" ui-sref="{{link.path}}" ng-click="clickMenu(link.name)">
                        <i class="fa" ng-class="link.icon"></i>
                        <span translate="{{link.name}}"></span>
                    </a>
                    <ul class="sub" ng-if="link.menu">
                        <li ng-repeat="sub in link.menu">
                            <a ng-class="{'active':sub.name === activeMenu}" ui-sref="{{sub.name}}" translate="{{sub.name}}" ng-click="clickMenu(sub.name)"></a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- sidebar menu end-->

    </div>
</aside>
<!--sidebar end-->

<!--main content start-->
    <%- include(mainContainer) %>
<!--main content end-->




</section>

<!-- Placed js at the end of the document so the pages load faster -->
<script>
 window.PROJECT_INFO =  <%- JSON.stringify(project) %>;
</script>
<!-- TODO:: grunt로 하나로 합치기 -->
<%- include(scriptContainer) %>
</body>
</html>
